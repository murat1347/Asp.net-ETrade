@model CartSummaryViewModel

<ul class="dropdown-menu">
  
    @foreach (var i in Model.Cart.CartLines)
    {
        <li>
            <a>@i.Product.ProductName<span class="badge">@i.Quantity</span></a>
        </li>
    }
    <li role="separator" class="divider"></li>
    <li>
        <a><span class="glyphicon glyphicon-align-left glyphicon-shopping-cart" aria-hidden="true">@Model.Cart.Total</span></a>
    </li>
    <li role="separator" class="divider"></li>
    <li>
        <a asp-controller="Cart" asp-action="List">Go to Details</a>
    </li>
</ul>