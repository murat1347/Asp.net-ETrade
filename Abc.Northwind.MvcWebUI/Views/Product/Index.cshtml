@using Abc.Northwind.MvcWebUI.Pages.Shared
@model Abc.Northwind.MvcWebUI.Models.ProductListViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}

    <table>
        <tr>
            <th>ProductName</th>
            <th>UnitPrice</th>
            <th>UnitInStock</th>
        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCard" asp-route-productId="@product.ProductId">Add To Cart</a></td>
            </tr>
        }
    </table>
  <product-list-pager current-category="@Model.CurrentCategory" current-page="@Model.CurrentPage" page-count="@Model.PageCount" page-size="@Model.PageSize"></product-list-pager>